<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kasembhundit.kutthareeya.thiti.manageres.OrderActivity">

    <!--ToolBar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/dp10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Back-->
            <ImageView
                android:id="@+id/imvBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_back" />
            <!--Title-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!--Food Name-->
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/txtNameFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name Food"
                    android:textColor="@color/textcolorPrimary"
                    android:textSize="@dimen/h1" />
                <!--Price Name-->
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/txtPriceFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textColor="@color/textcolorPrimary"
                    android:textSize="@dimen/h2" />


            </LinearLayout>

            <!--Order-->

            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/imvOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/confirm" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <!--Content-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp10">


            <!--Show Infomarion-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorLight"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_online"/>

                <TextView
                    android:layout_marginLeft="@dimen/dp25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt20"
                    android:textStyle="bold"/>

                <TextClock
                    android:layout_alignParentRight="true"
                    android:id="@+id/clockTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/size20" />

            </RelativeLayout>



            <!--Show Image and Price-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp25"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imvIcon"
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp100" />

                <TextView
                    android:id="@+id/txtTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp25"
                    android:text="ราคา: 100฿"
                    android:textColor="@color/colorSecondary"
                    android:textSize="@dimen/h1"
                    android:textStyle="bold" />

            </LinearLayout>
            <!--Topping-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h2"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ส่วนผสม"
                    android:textSize="@dimen/dp25" />

                <Spinner
                    android:id="@+id/spnTopping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size20"></Spinner>


            </LinearLayout>
            <!--Special-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h2"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chbSpecial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/h2"
                    android:padding="20sp"
                    android:text="พิเศษ"
                    android:textSize="@dimen/txt20">
                </CheckBox>


            </LinearLayout>
            <!--Item-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h2"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="จำนวน"
                    android:textSize="@dimen/dp25" />

                <Spinner
                    android:id="@+id/spnItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/h2"
                    android:padding="20sp">
                </Spinner>

            </LinearLayout>
            <!--Time-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h2"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เวลารับอาหาร"
                    android:textSize="@dimen/dp25"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spnTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/h2"
                    android:padding="20sp">x
                </Spinner>

            </LinearLayout>

            <!--Delivery-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h2">

                <TextView
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:id="@+id/txtShowTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="รับอาหาร"
                    android:textSize="@dimen/dp25" />

                <ImageView
                    android:id="@+id/imvChooseTime"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_authen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <CheckBox
                android:layout_marginLeft="@dimen/h2"
                android:id="@+id/chbDelivery"
                android:textSize="@dimen/txt20"
                android:text="@string/dev2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
