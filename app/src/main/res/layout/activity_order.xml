<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kasembhundit.kutthareeya.thiti.manageres.OrderActivity">

    <!--ToolBar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/dp10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Back-->
            <ImageView
                android:id="@+id/imvBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_back" />
            <!--Title-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!--Food Name-->
                <TextView
                    android:id="@+id/txtNameFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ชื่ออาหาร"
                    android:textColor="@color/textcolorPrimary"
                    android:textSize="25dp"
                    android:textStyle="bold" />
                <!--Price Name-->
                <TextView
                    android:id="@+id/txtPriceFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ราคา"
                    android:textColor="@color/textcolorPrimary"
                    android:textSize="@dimen/h2"
                    android:textStyle="bold" />


            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <!--Content-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp10">


            <!--Show Infomarion-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorLight"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_online" />

                <TextView
                    android:id="@+id/txtUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp25"
                    android:text="@string/username"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt20"
                    android:textStyle="bold" />

                <TextClock
                    android:id="@+id/clockTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/size20" />

            </RelativeLayout>


            <!--Show Image and Price-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp25"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imvIcon"
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp100" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="ราคา: 100฿"
                        android:textColor="@color/colorSecondary"
                        android:textSize="26dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/txtPromotion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/h1"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>
            <!--Topping-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ส่วนผสม"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/dp25"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spnTopping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size20"></Spinner>


            </LinearLayout>
            <!--Special-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h2"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chbSpecial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/h2"
                    android:padding="20sp"
                    android:text="พิเศษ"
                    android:textSize="@dimen/txt20"></CheckBox>


            </LinearLayout>

            <!--Item-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="จำนวน"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/dp25"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spnItem"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/h2"
                    android:padding="20sp"></Spinner>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="จาน"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/dp25"
                    android:textStyle="bold" />

            </LinearLayout>


            <Button
                android:id="@+id/btnOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/colorSecondary"
                android:src="@drawable/confirm"
                android:text="สั่งอาหาร"
                android:textColor="@color/textcolorPrimary"
                android:textSize="@dimen/size20"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
